<Window x:Class="PBL3.Views.GiaoDienChinhQuanLy"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PBL3.Views"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        TextElement.Foreground="Black"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}"
        Title="Quản lý phòng trọ" Height="768" Width="1366">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <!-- Header Row -->
            <RowDefinition Height="*"/>
            <!-- Content Row -->
        </Grid.RowDefinitions>

        <!-- Header Row -->
        <Grid Grid.Row="0">
            <Rectangle Fill="#72CDFF" />

            <TextBlock Text="Quản Lý Nhà Trọ" 
                       FontSize="28" 
                       FontWeight="Bold" 
                       FontFamily="Segoe UI"
                       Foreground="Black"
                       Margin="60,0,0,0" 
                       HorizontalAlignment="Left" 
                       VerticalAlignment="Center"/>
            <materialDesign:PackIcon Kind="Home" Width="35" Height="36" Margin="17,0,0,0" VerticalAlignment="Center"/>

            <!-- User Profile Image -->
            <StackPanel HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,10,0">
                <Ellipse Width="70" Height="70"
                         Fill="#D9D9D9"/>

            </StackPanel>
        </Grid>

        <!-- Content Row -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <!-- Menu Column -->
                <ColumnDefinition Width="*"/>
                <!-- Content Column -->
            </Grid.ColumnDefinitions>

            <!-- Menu Column -->
            <Grid Grid.Column="0">
                <!-- Menu Background -->
                <Rectangle Fill="#C4EEFF" 
                           RadiusX="20" 
                           RadiusY="20"
                           Stroke="Black" 
                           StrokeThickness="1"
                           Margin="0,10,0,0"/>

                <!-- Menu Content -->
                <StackPanel>
                    <!-- Profile Section -->
                    <Border Width="220" 
                            Height="65" 
                            Margin="15,30,0,0"
                            HorizontalAlignment="Left" 
                            Background="White" 
                            BorderBrush="Black" 
                            BorderThickness="1"
                            CornerRadius="20">
                        <StackPanel Margin="10,12,0,0">
                            <TextBlock Text="Họ và tên :" 
                                      FontWeight="Bold" 
                                      Foreground="Black"
                                      FontSize="12"/>
                            <TextBlock Text="Vai Trò  :  Quản lý trọ" 
                                      FontWeight="Bold" 
                                      Foreground="Black"
                                      FontSize="12" 
                                      Margin="0,10,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Navigation Buttons -->
                    <StackPanel Margin="0,40,0,0">
                        <Button Style="{StaticResource MaterialDesignRaisedButton}"
                                Height="32" Width="200"
                                Margin="10,0,10,25"
                                Background="#72CDFF"
                                HorizontalAlignment="Center"
                                HorizontalContentAlignment="Left"
                                VerticalContentAlignment="Center"
                                Padding="15,0">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Home" 
                                                       Foreground="Black"
                                                       Width="15" Height="15"
                                                       VerticalAlignment="Center"
                                                       Margin="0,0,8,0"/>
                                <TextBlock Text="Trang chủ" 
                                         FontSize="13" 
                                         Foreground="Black"
                                         FontWeight="Bold"
                                         VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource MaterialDesignRaisedButton}"
                                Height="32" Width="200"
                                Margin="10,0,10,25"
                                Background="White"
                                HorizontalAlignment="Center"
                                HorizontalContentAlignment="Left"
                                VerticalContentAlignment="Center"
                                Padding="15,0">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="AccountMultiple" 
                                                       Foreground="Black"
                                                       Width="15" Height="15"
                                                       VerticalAlignment="Center"
                                                       Margin="0,0,8,0"/>
                                <TextBlock Text="Quản Lý Người Thuê Trọ" 
                                         FontSize="13" 
                                         Foreground="Black"
                                         FontWeight="Bold"
                                         VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource MaterialDesignRaisedButton}"
                                Height="32" Width="200"
                                Margin="10,0,10,25"
                                Background="White"
                                HorizontalAlignment="Center"
                                HorizontalContentAlignment="Left"
                                VerticalContentAlignment="Center"
                                Padding="15,0">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="AccountTie" 
                                                       Foreground="Black"
                                                       Width="15" Height="15"
                                                       VerticalAlignment="Center"
                                                       Margin="0,0,8,0"/>
                                <TextBlock Text="Quản lý Nhân Viên" 
                                         FontSize="13" 
                                         Foreground="Black"
                                         FontWeight="Bold"
                                         VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource MaterialDesignRaisedButton}"
                                Height="32" Width="200"
                                Margin="10,0,10,25"
                                Background="White"
                                HorizontalAlignment="Center"
                                HorizontalContentAlignment="Left"
                                VerticalContentAlignment="Center"
                                Padding="15,0">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Home" 
                                                       Foreground="Black"
                                                       Width="15" Height="15"
                                                       VerticalAlignment="Center"
                                                       Margin="0,0,8,0"/>
                                <TextBlock Text="Quản Lý Phòng Trọ" 
                                         FontSize="13" 
                                         Foreground="Black"
                                         FontWeight="Bold"
                                         VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource MaterialDesignRaisedButton}"
                                Height="32" Width="200"
                                Margin="10,0,10,25"
                                Background="White"
                                HorizontalAlignment="Center"
                                HorizontalContentAlignment="Left"
                                VerticalContentAlignment="Center"
                                Padding="15,0">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="ChartBar" 
                                                       Foreground="Black"
                                                       Width="15" Height="15"
                                                       VerticalAlignment="Center"
                                                       Margin="0,0,8,0"/>
                                <TextBlock Text="Thống Kê" 
                                         FontSize="13" 
                                         Foreground="Black"
                                         FontWeight="Bold"
                                         VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource MaterialDesignRaisedButton}"
                                Height="32" Width="200"
                                Margin="10,0,10,25"
                                Background="White"
                                HorizontalAlignment="Center"
                                HorizontalContentAlignment="Left"
                                VerticalContentAlignment="Center"
                                Padding="15,0">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="CreditCard" 
                                                       Foreground="Black"
                                                       Width="15" Height="15"
                                                       VerticalAlignment="Center"
                                                       Margin="0,0,8,0"/>
                                <TextBlock Text="Quản lý Thanh toán" 
                                         FontSize="13" 
                                         Foreground="Black"
                                         FontWeight="Bold"
                                         VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource MaterialDesignRaisedButton}"
                                Height="32" Width="200"
                                Margin="10,0,10,25"
                                Background="White"
                                HorizontalAlignment="Center"
                                HorizontalContentAlignment="Left"
                                VerticalContentAlignment="Center"
                                Padding="15,0">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="AccountCircle" 
                                                       Foreground="Black"
                                                       Width="15" Height="15"
                                                       VerticalAlignment="Center"
                                                       Margin="0,0,8,0"/>
                                <TextBlock Text="Thông tin cá nhân" 
                                         FontSize="13" 
                                         Foreground="Black"
                                         FontWeight="Bold"
                                         VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource MaterialDesignRaisedButton}"
                                Height="32" Width="200"
                                Margin="10,0,10,25"
                                Background="White"
                                HorizontalAlignment="Center"
                                HorizontalContentAlignment="Left"
                                VerticalContentAlignment="Center"
                                Padding="15,0">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Logout" 
                                                       Foreground="Black"
                                                       Width="15" Height="15"
                                                       VerticalAlignment="Center"
                                                       Margin="0,0,8,0"/>
                                <TextBlock Text="Thoát" 
                                         FontSize="13" 
                                         Foreground="Black"
                                         FontWeight="Bold"
                                         VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </Grid>

            <!-- Content Column - Để trống cho nội dung tương lai -->
            <Grid Grid.Column="1">

            </Grid>
        </Grid>
    </Grid>
</Window>
