<UserControl x:Class="PBL3.Views.BangQuanlynguoithuetro"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PBL3.Views"
             mc:Ignorable="d" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             TextElement.Foreground="{DynamicResource MaterialDesignBody}"
             TextElement.FontWeight="Regular"
             TextElement.FontSize="13"
             TextOptions.TextFormattingMode="Ideal"
             TextOptions.TextRenderingMode="Auto"
             Background="{DynamicResource MaterialDesignPaper}"
             FontFamily="{DynamicResource MaterialDesignFont}"
             d:DesignHeight="700" d:DesignWidth="1142">
    <!-- Content Column -->
    <Grid Margin="10">
        <!-- Main Container -->
        <Border Background="#FFFCFC"
                CornerRadius="20"
                BorderBrush="Black"
                BorderThickness="1">
            <Grid>
                <!-- Header -->
                <Border Height="50" 
                        Background="#D9D9D9"
                        CornerRadius="20"
                        BorderBrush="Black"
                        BorderThickness="1"
                        VerticalAlignment="Top"
                        Margin="10,10,10,0"/>
                
                <!-- Legend Items -->
                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            Margin="0,20,20,0">
                    
                    <!-- Người thuê trọ -->
                    <TextBlock Text="Người thuê trọ"
                               FontFamily="Segoe UI"
                               FontSize="14"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"
                               Margin="0,0,15,0"/>
                    
                    <!-- Bình Thường -->
                    <TextBlock Text="Bình Thường"
                               FontFamily="Segoe UI"
                               FontSize="14"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"
                               Margin="0,0,8,0"/>
                    
                    <!-- Blue indicator -->
                    <Rectangle Width="16" Height="16"
                               Fill="#68E1FD"
                               Margin="0,0,15,0"/>
                    
                    <!-- Chưa đóng tiền -->
                    <TextBlock Text="Chưa đóng tiền"
                               FontFamily="Segoe UI"
                               FontSize="14"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"
                               Margin="0,0,8,0"/>
                    
                    <!-- Red indicator -->
                    <Rectangle Width="16" Height="16"
                               Fill="#FD6868"
                               Margin="0,0,15,0"/>
                    
                    <!-- Gia Hạn -->
                    <TextBlock Text="Gia Hạn"
                               FontFamily="Segoe UI"
                               FontSize="14"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"
                               Margin="0,0,8,0"/>
                    
                    <!-- Yellow indicator -->
                    <Rectangle Width="16" Height="16"
                               Fill="#FFBC0E"/>
                </StackPanel>

                <!-- Content Area -->
                <Grid Margin="10,70,10,10">
                    <WrapPanel x:Name="nguoiThueContainer" 
                              Orientation="Horizontal"
                              HorizontalAlignment="Left"
                              VerticalAlignment="Top">
                        <!-- Các ONguoiThueTro sẽ được thêm vào đây -->
                    </WrapPanel>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</UserControl>
